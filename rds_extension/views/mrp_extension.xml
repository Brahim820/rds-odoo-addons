<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="omnia_extention_mrp_production_form_view" model="ir.ui.view">
            <field name="name">omnia.extention.mrp.production.form.view</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="availability" position="after">
                    <field name="note"/>
                </field>
            </field>
        </record>


    <record id="view_mrp_pivot_manufacturing_tree" model="ir.ui.view">
        <field name="name">Pivot Manufacturing tree</field>
        <field name="model">mrp.production_pivot_rds_view</field>
        <field name="arch" type="xml">
            <tree string="Manufacturing Orders">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="stock_quant"/>
                <field name="product_uom_qty"/>
                <field name="qty_delivered"/>
            </tree>
        </field>
    </record>
 
    <record id="view_mrp_pivot_manufacturing" model="ir.ui.view">
        <field name="name">Pivot Manufacturing</field>
        <field name="model">mrp.production_pivot_rds_view</field>
        <field name="arch" type="xml">
            <pivot string="Manufacturing Orders">
                <field name="product_id" type="row"/>
                <field name="location_id" type="col"/>
                <field name="stock_quant" type="measure"/>
                <field name="product_uom_qty" type="measure"/>
                <field name="qty_delivered" type="measure"/>				
            </pivot>
        </field>
    </record>

    <record id="action_mrp_pivot_manufacturing" model="ir.actions.act_window">
        <field name="name">Pivot Manufacturing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production_pivot_rds_view</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,pivot</field>
        <!-- <field name="view_id" eval="view_mrp_pivot_manufacturing"/> -->
    </record>

    <menuitem id="menu_pivot_manufacturing"
          name="Manufacturing Pivot"
          parent="mrp.menu_mrp_manufacturing"
          action="action_mrp_pivot_manufacturing"
          sequence="11"/>



    </data>
</odoo>