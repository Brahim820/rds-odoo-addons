<odoo>
    <data>
        <record id="rds_hr_employee_formation_form" model="ir.ui.view">
            <field name="name">rds_hr_employee_formation_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page groups="hr.group_hr_user" string="Formazione">
                        <group string="Scheda Abilità">
                            <field nolabel="1" colspan="4" name="skills" domain="[('employee_id', '=', id)]" context="{'default_employee_id': id}">
                                <tree editable="bottom">
                                    <field name="skill_type"/>
                                    <field name="current_level"/>
                                    <field name="current_target"/>
                                    <field name="target_date"/>
                                    <field name="ideal_level"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Corsi Frequentati">
                            <field nolabel="1" colspan="4" name="formations" domain="[('employee_id', '=', id)]" context="{'default_employee_id': id}">
                                <tree editable="bottom">
                                    <field name="course_id"/>
                                    <field name="date"/>
                                    <field name="certificate"/>
                                    <field name="ateneum"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <act_window 
            id="rds_hr_open_courses" 
            name="Corsi" 
            res_model="rds.hr.course" />

        <act_window 
            id="rds_hr_open_skill_types" 
            name="Tipi di Abilità" 
            res_model="rds.hr.skill.type" />

        <menuitem
            id="rds_menu_hr_skill_types"
            name="Tipi di Abilità"
            action="rds_hr_open_skill_types"
            parent="hr.menu_human_resources_configuration"
            sequence="110"/>

        <menuitem
            id="rds_menu_hr_courses"
            name="Corsi di Formazione"
            action="rds_hr_open_courses"
            parent="hr.menu_human_resources_configuration"
            sequence="100"/>

        <record id="rds_hr_course_form" model="ir.ui.view"> 
            <field name="name">rds_hr_course_form</field> 
            <field name="model">rds.hr.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>
                            <field name="name"/>
                        </h2>
                        <field placeholder="Corso genitore..." name="parent_id"/>
                        <group string="Descrizione">
                            <field name="description" widget="html" nolabel="1" colspan="4"/>
                        </group>
                        <group string="Materiale">
                            <field name="material" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rds_hr_course_list" model="ir.ui.view"> 
            <field name="name">rds_hr_course_list</field> 
            <field name="model">rds.hr.course</field>
            <field name="arch" type="xml"> 
                <tree>
                    <field name="complete_name"/>
                </tree> 
            </field> 
        </record>

        <record id="rds_hr_skill_types_form" model="ir.ui.view"> 
            <field name="name">rds_hr_skill_types_form</field> 
            <field name="model">rds.hr.skill.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>
                            <field name="name"/>
                        </h2>
                        <field placeholder="Abilità genitore..." name="parent_id"/>
                        <group string="Descrizione">
                            <field name="description" widget="html" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rds_hr_skill_types_list" model="ir.ui.view"> 
            <field name="name">rds_hr_skill_types_list</field> 
            <field name="model">rds.hr.skill.type</field>
            <field name="arch" type="xml"> 
                <tree>
                    <field name="complete_name"/>
                </tree> 
            </field> 
        </record>

        <record id="rds_hr_show_skill_matrix" model="ir.actions.act_window">
            <field name="name">Analisi Skill Matrix</field>
            <field name="res_model">rds.hr.skill</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
            <field name="view_id"></field>
        </record>


        <menuitem id="rds_hr.menu_hr_skill_matrix" 
            name="Skill Matrix" 
            parent="rds_hr.menu_hr_reports" 
            sequence="30" 
            action="rds_hr_show_skill_matrix"
            groups="hr.group_hr_user"/>

        <record id="rds_hr_skill_matrix" model="ir.ui.view">
            <field name="name">rds.hr.skill.matrix</field>
            <field name="model">rds.hr.skill</field>
            <field name="arch" type="xml">
                <pivot string="Matrice Abilità">
                    <field name="employee_id" type="col"/>
                    <field name="skill_type" type="row"/>
                    <field name="current_level" type="measure"/>
                    <field name="current_target" type="measure"/>
                    <field name="ideal_level" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>