<odoo>
     <data>

        <record id="rds_ir_extended_employee_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="2000"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']/.." position="after">
                    <button groups="hr.group_hr_manager" class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="rds_ir_extended_lead_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_lead_form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="priority" eval="2000"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='toggle_active']" position="before">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="rds_ir_extended_product_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_product_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </button>
            </field>
        </record>

        <record id="rds_ir_extended_project_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_project_form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <button name="attachment_tree_view" position="replace">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </button>
            </field>
        </record>

        <record id="rds_ir_extended_task_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_task_form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </button>
            </field>
        </record>

        <record id="rds_ir_extended_job_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_job_form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="rds_ir_extended_partner_form" model="ir.ui.view">
            <field name="name">rds_ir_extended_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button  class="oe_stat_button" name="rds_view_attachments" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </button>
            </field>
        </record>


        <record id="res_request_link_view_ext" model="ir.ui.view">
            <field name="name">res.request.link.form.ext</field>
            <field name="model">res.request.link</field>
            <field name="inherit_id" ref="base.res_request_link-view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='priority']" position="after">
                    <field name="color"/>
                </xpath>
            </field>
        </record>

        <record id="user_view_wkdir" model="ir.ui.view">
            <field name="name">user.view.wkdir</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="wk_dir"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>