<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="partner_pricelists_sale_order" model="ir.ui.view">
            <field name="name">partner_pricelists_sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="2000"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="before">
                    <field name="is_on_pricelist" invisible="1"/>
                    <field name="partner_pricelist_id" invisible="1"/>
                    <div class="alert alert-warning" style="text-align: center" attrs="{'invisible': [('partner_pricelist_id', '!=', False)]}">
                        <p>This sale is not using any partner pricelist.</p>
                    </div>
                    <div class="alert alert-danger" style="text-align: center" attrs="{'invisible': ['|', ('partner_pricelist_id', '=', False), ('is_on_pricelist', '=', True)]}">
                        <strong>Warning!</strong><p>This sale is using a partner pricelist, but there are lines that don't match any lot size / price combination or are below minumum lot size. See lines in red.</p>
                    </div>
                </xpath>

                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="partner_pricelist_id" attrs="{'invisible': [('partner_pricelist_id', '=', False)]}"/>
                </xpath>

                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="string">Regional Pricelist</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree" position="attributes">
                    <attribute name="decoration-danger">is_on_pricelist == False</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="before">
                    <field name="is_on_pricelist" invisible="1"/>
                </xpath>

            </field>
        </record>
</odoo>