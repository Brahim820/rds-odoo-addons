<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="partner_pricelist_lock_view_form" model="ir.ui.view">
            <field name='name'>partner.pricelist.lock.form</field>
            <field name='model'>partner.pricelist.lock</field>
            <field name='arch' type='xml'>
                <form string='Pricelist Locking'>
                    <sheet>
                        <field name="pricelist_id" invisible="True"/>
                        <field name="partner_id" invisible="True"/>
                        <field name="partner_code" invisible="True"/>

                        <field name="old_pricelist_id" invisible="True"/>
                        
                        <div class="alert alert-info" role="alert">You are activating a partner pricelist. After this is done, this pricelist's products prices will be calculated using this pricelist, <strong>only for the pricelist's partner</strong>.</div>
                        <div class="alert alert-info" role="alert" attrs="{'invisible': [('old_pricelist_id', '=', False)]}">Customer <strong><field name="partner_name"/></strong> has a currently active partner pricelist. As only one partner pricelist may be active per customer, it will be deactivated.</div>
                       
                        <group>
                            <field name="copy_old_lines" attrs="{'invisible': [('old_pricelist_id', '=', False)]}"/>
                            <field name="pl_code"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name='confirm_pricelist' string='Confirm' class='oe_highlight' type='object'/>
                        <button special="cancel" string="Cancel" type="object" class="btn btn-default oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
