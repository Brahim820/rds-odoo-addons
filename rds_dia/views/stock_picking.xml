<odoo>
    <data>
        <record id="rds_dia_stock_view_picking_form" model="ir.ui.view">
            <field name="name">rds.dia.stock.view.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="ddt_date" position="after">
                    <button name="transfer_to_dia"  string="Transfer to DIA" type="object" groups="base.group_no_one"/>
                    <field name="send_to_dia" groups="base.group_no_one"/>
                    <field name="causale_dia"/>
                    <field name="dia_next_number" readonly="1"/>
                    <field name="dia_last_number_odoo" readonly="1"/>
                    <field name="dia_next_computed_number" readonly="1"/>
                </field>
	            <xpath expr="//field[@name='move_lines']/tree/field[@name='date_expected']" position="after">
	                <field name="data_decorrenza"/>
	            </xpath>
                
            </field>
        </record>
    </data>
    
    <record model="ir.actions.act_window" id="plm_action_dia_causale">
        <field name="name">Causali Dia</field>
         <field name="res_model">dia.causale</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem 
        name="Causali Dia" 
        action="plm_action_dia_causale" 
        id="menu_causale_dia" 
        parent="omnia_ddt.menu_action_DDT"
        sequence="11" 
    />
</odoo>