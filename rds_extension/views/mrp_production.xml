<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
	 <record id="action_server_odp_completo" model="ir.actions.server">
	     <field name="name">ODP Completo</field>
	     <field name="type">ir.actions.server</field>
	     <field name="model_id" ref="mrp.model_mrp_production" />
	     <field name="binding_model_id" ref="mrp.model_mrp_production" />
	     <field name="state">code</field>
	     <field name="code">
	     action = env['mrp.production'].getODPWizard(env.context.get('active_ids'))  
	     </field>
	 </record>
 
		<record id="production_odp_complete" model="ir.ui.view">
		    <field name="name">production.complete.odp.wizard</field>
		    <field name="model">odp_wizard_export</field>
		    <field name="type">form</field>
		    <field name="arch" type="xml">
		      <form string="ODP Completo">
		          <group>
		            <field name="datas" readonly="True" filename="datas_fname"/>
		            <field name="datas_fname"/>
		          </group>
		         <footer>
		            <button special="cancel" string="Close"/>
		         </footer>
		      </form>
		    </field>
		</record>

		<!-- Not working
      <report id="mrp_production_multi_pdf_user_call"
            model="mrp.production"
            string="ODP Completo"
            report_type="qweb-html"   
            name="rds_extension.mrp_production_multi_pdf"
            header="False"   
             /> 
             -->	
    <record id="A4O" model="report.paperformat">
        <field name="name">A4O</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">28</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>
    
      <report id="report_mrp_production_report_user_call"
            model="mrp.production"
            string="ODP"
            paperformat="A4O"
            report_type="qweb-pdf"   
            name="rds_extension.report_plan_order_report"
            header="False"   
             /> 
             
    <record id="A6O" model="report.paperformat">
        <field name="name">A6O</field>
        <field name="default" eval="True"/>
        <field name="format">A6</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    
      <report id="ui_report_standard_lables"
            model="mrp.production"
            string="Lables"
            paperformat="A6O"
            report_type="qweb-pdf"   
            name="rds_extension.report_standard_lables"
            header="False"   
             /> 
             
	</data>
</openerp>
