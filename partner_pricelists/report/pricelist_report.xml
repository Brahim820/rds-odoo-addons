<?xml version="1.0" encoding="utf-8"?>
<odoo>

<report 
    id="action_report_partner_pricelist"
    string="Pricelist Offer / Pricelist"
    model="partner.pricelist" 
    report_type="qweb-pdf"
    file="partner_pricelists.report_partner_pricelist" 
    name="partner_pricelists.report_partner_pricelist"
    print_report_name="(object.state in ('draft', 'sent') and 'Partner Pricelist Offer - %s' % (object.name)) or 'Partner Pricelist - %s' % (object.name)"
/>

<template id="report_partner_pricelist_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                    <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                </div>
            </div>

            <h2>
                <span t-if="doc.state not in ['draft','sent']">Partner Pricelist # </span>
                <span t-if="doc.state in ['draft','sent']">Partner Pricelist Offer # </span>
                <span t-field="doc.name"/>
            </h2>

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.customer_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.customer_ref"/>
                </div>
                <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3">
                    <strong>Date Confirmed:</strong>
                    <p t-field="doc.confirmation_date"/>
                </div>
                <div t-if="doc.rfq_date and doc.state in ['draft','sent']" class="col-xs-3">
                    <strong>RFQ Date:</strong>
                    <p t-field="doc.rfq_date"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Valid until:</strong>
                    <p t-field="doc.validity_date"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Your Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Terms <br/>(to be applied on future sales):</strong>
                    <p t-field="doc.payment_term_id" />
                </div>
            </div>

            <table class="table table-condensed">    
                <thead>
                    <tr>
                        <th>Our Code</th>
                        <th>Your Code</th>
                        <th>Description</th>
                        <th>Lot Size</th>                  
                        <th class="text-right">Total Each</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <!-- Lines associated -->
                    <t t-foreach="doc.pricelist_lines" t-as="l">
                        <tr>
                            <td>
                                <span t-if="l.product_id.default_code" t-field="l.product_id.default_code"/>
                            </td>

                            <td>
                                <span t-if="l.customer_ref" t-field="l.customer_ref"/>
                            </td>

                            <td>
                                <strong t-esc="l.product_id.name"/>
                                <span t-if="l.product_id.description_sale">
                                    <br/>
                                    <span t-field="l.product_id.description_sale"/>
                                </span>    
                            </td>

                            <td class="text-right">
                                <span t-field="l.lot_size"/>
                            </td>

                            <td class="text-right">
                                <span t-field="l.price_unit" t-field-options='{"widget": "monetary", "display_currency": l.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="clearfix">
            </div>

            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_partner_pricelist">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="partner_pricelists.report_partner_pricelist_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
