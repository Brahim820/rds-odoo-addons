<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[@name='partner_header'][1]/.." position='before'>
            <div t-if="o.transport_partner_id" class="col-xs-4">
                <strong>Carrier:</strong>
                <div t-field="o.transport_partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>
            <div t-if="o.partner_invoice_id and (o.partner_invoice_id != o.partner_id)" class="col-xs-4 pull-right">
                <strong>Invoicing Address:</strong>
                <div t-field="o.partner_invoice_id"
                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>
        </xpath>

        <xpath expr="//span[@t-field='o.name']" position='replace'>
            <span t-if="not o.ddt_number" t-field="o.name"/>
            <span t-if="o.ddt_number" t-field="o.ddt_number"/>
        </xpath>

        <xpath expr="//div[1]" position='inside'>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <br/>
            <div t-if="o.notes">
                <strong><h3>Note</h3></strong>
                <p t-field="o.notes"/>
                <br/>
            </div>
            <table class="table table-condensed mt48">
                <thead>
                    <tr>
                        <th colspan="2">Outside Goods Appearance</th>
                        <th colspan="2">Incoterms</th>
                        <th colspan="1">Weight (Kg)</th>
                        <th colspan="1">N. Packages</th>
                        <th colspan="2">Carrier Signature</th>
                        <th colspan="2">Transferor Signature</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="2"><span t-field="o.goods_description_id"/></td>
                        <td colspan="2"><span t-field="o.incoterm"/></td>
                        <td colspan="1"><span t-field="o.shipping_weight"/></td>
                        <td colspan="1"><span t-field="o.number_of_packages"/></td>
                        <td colspan="2"></td>
                        <td colspan="2"></td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>

</odoo>