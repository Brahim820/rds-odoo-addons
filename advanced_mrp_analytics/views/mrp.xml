<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_equipment_request_view_form" model="ir.ui.view">
            <field name="name">equipment.request</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="priority" eval="2000"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_create_task" id="action_create_task"
                        string="Create Task" class="btn-primary" type="object"
                        attrs="{'invisible': ['|', ('project_id', '=', False), ('task_id', '!=', False)]}"/>
                </xpath>

                <xpath expr="//field[@name='priority']/.." position="inside">
                    <br/>
                    <field name="project_id" attrs="{'invisible': [('project_id', '=', False)]}"/>
                    <field name="task_id" attrs="{'invisible': [('project_id', '=', False)]}" domain="[('project_id', '=', project_id)]"/>
                </xpath>

            </field>
        </record>

        <record id="maintenance_equipment_mold_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.mold.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']/.." position="inside">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.analytics</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='availability']/.." position="after">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="tag_ids"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_workcenter_form_view" model="ir.ui.view">
            <field name="name">mrp.workcenter.form.analytics</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp_account.mrp_workcenter_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='costs_hour_account_id']/.." position="after">
                    <field name="tag_ids"/>
                </xpath>
            </field>
        </record>

</odoo>