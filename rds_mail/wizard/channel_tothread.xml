<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="channel_to_thread_converter_form" model="ir.ui.view">
            <field name='name'>channel_to_thread_converter_form</field>
            <field name='model'>channel.tothread</field>
            <field name='arch' type='xml'>
                <form string='Prepara Thread'>
                    <sheet>
                        <group>
                            <group>
                            <field name="mode"/>                               
                            <field name="convert_to" domain="[['is_mail_thread', '=', True]]" attrs="{'invisible': [('mode','!=','convert')]}"/>
                            <field name="merge_to" attrs="{'invisible': [('mode','!=', 'merge')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button string="Conferma" name="do_ch" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
