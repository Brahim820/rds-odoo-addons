<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="omnia_view_picking_form">
        <field name="name">omnia.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <p class="oe_edit_only" colspan="2" style="color:darkblue;"><strong>Note:</strong> Changing scheduled date will reschedule all moves.<br/></p>
            </xpath>
            <xpath expr="//field[@name='move_lines']/tree/field[@name='product_uom_qty']" position="before">
                <field name="requested_date" readonly="True" widget="date"/>
                <field name="initial_commitment_date" widget="date"/>
                <field name="date_expected" widget="date"/>
            </xpath>
        </field>
    </record>
</odoo>
