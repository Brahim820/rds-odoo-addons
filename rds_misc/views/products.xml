<?xml version="1.0" ?>
<odoo>
 
    <record id="rds_misc_product_template_only_form_view" model="ir.ui.view">
        <field name="name">rds.misc.product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="priority" eval="2000"/>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="replace">
                <label for="default_code" string="Code"/>
                <div>
                    <field name="default_code" class="oe_inline"/>
                    <button name="action_get_code"
                            type="object"
                            icon="fa-refresh"
                            class="oe_edit_only oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="rds_misc_view_product_supplier_inherit_extend" model="ir.ui.view">
        <field name="name">rds.misc.view.product.supplier.inherit.extend</field>
        <field name="model">product.template</field>
        <field name="priority" eval="2000"/>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='seller_ids']/.." position="after">
                <group>
                    <group>
                        <field name="default_vendor"/>
                    </group>
                </group>
            </xpath>            
        </field>
    </record>       	

    <record id="rds_misc_view_template_property_form" model="ir.ui.view">
        <field name="name">rds.misc.view.template.property.form.extend</field>
        <field name="model">product.template</field>
        <field name="priority" eval="2000"/>
        <field name="inherit_id" ref="stock.view_template_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='volume']" position="after">

                <label for="default_location"/>
                <div class="o_row" name="default_location">
                    <field name="default_location" string="Locazione Standard"/>
                </div>

            </xpath>            
        </field>
    </record>

    <record id="rds_product_category_form" model="ir.ui.view">
        <field name="name">rds.product.category.form</field>
        <field name="model">product.category</field>
        <field name="priority" eval="2000"/>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='route_ids']/.." position="before">
                <group string="Codifica">
                    <field name="has_code"/>

                    <field name="code_prefix" attrs="{'invisible': [('has_code', '=', False)]}"/>
                    <field name="code_body_len" attrs="{'invisible': [('has_code', '=', False)]}"/>
                    <field name="code_suffix" attrs="{'invisible': [('has_code', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>