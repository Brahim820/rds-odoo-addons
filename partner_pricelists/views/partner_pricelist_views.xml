<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_partner_pricelist_tree" model="ir.ui.view">
            <field name="name">partner.pricelist.tree</field>
            <field name="model">partner.pricelist</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Pricelist" class="o_sale_order" decoration-bf="message_needaction==True" decoration-muted="state in ['cancel']">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" string="Pricelist Number"/>
                    <field name="rfq_date" string="Creation Date"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_pricelist_offer" model="ir.actions.act_window">
            <field name="name">Pricelist Offer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.pricelist</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="partner_pricelists.view_partner_pricelist_tree"/>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[['activation_date', '=', False]]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create an offer for a customer pricelist, the first step of a new sale.
              </p><p>
                Your next actions should flow efficiently: confirm the Offer
                to a Pricelist, then create the orders and quotations.
              </p><p>
                Note that once an offer becomes a Pricelist, it will be moved
                from the Pricelist Offers list to the Pricelists list.
              </p>
            </field>
        </record>

        <record id="action_partner_pricelist" model="ir.actions.act_window">
            <field name="name">Partner Pricelists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.pricelist</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="partner_pricelists.view_partner_pricelist_tree"/>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[['activation_date', '!=', False]]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create an offer for a customer pricelist, the first step of a new sale.
              </p><p>
                Your next actions should flow efficiently: confirm the Offer
                to a Pricelist, then create the orders and quotations.
              </p><p>
                Note that once an offer becomes a Pricelist, it will be moved
                from the Pricelist Offers list to the Pricelists list.
              </p>
            </field>
        </record>

        <!-- Top menu item -->

        <menuitem id="rds_menu_offers" name="Pricelists Offer" action="partner_pricelists.action_partner_pricelist_offer" parent="sale.sale_order_menu" sequence="12" groups="product.group_sale_pricelist"/>
        <menuitem id="rds_menu_pricelist" name="Partner Pricelists" action="partner_pricelists.action_partner_pricelist" parent="sale.product_menu_catalog" sequence="1000" groups="product.group_sale_pricelist"/>

        <record id="view_partner_pricelist_kanban" model="ir.ui.view">
            <field name="name">view.partner.pricelist.kanban</field>
            <field name="model">partner.pricelist</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="rfq_date"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><t t-esc="record.partner_id.value"/></span></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><t t-esc="record.name.value"/> <t t-esc="record.rfq_date.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'cancel': 'default', 'done': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_pricelist_form" model="ir.ui.view">
            <field name="name">partner.pricelist.form</field>
            <field name="model">partner.pricelist</field>
            <field name="arch" type="xml">
                <form string="Pricelist" class="o_sale_order">
                <header>
                    <button name="action_pricelist_send" string="Send by Email" type="object" states="draft" class="btn-primary"/>
                    <button name="print_pricelist" string="Print" type="object" states="draft" class="btn-primary o_sale_print"/>
                    <button name="action_confirm" id="action_confirm"
                        string="Confirm Pricelist" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <button name="action_confirm" id="action_confirm"
                        string="Confirm Pricelist" type="object"
                        attrs="{'invisible': [('state', 'in', ['sent', 'confirm', 'done', 'cancel'])]}"/>

                    <button name="action_done" type="object" string="Activate Pricelist" states="confirm"
                        help="Activating the pricelist will cause price computation for the customer to search through this pricelist."/>

                    <button name="action_cancel" states="draft,sent,confirm" type="object" string="Cancel"/>
                    <button name="action_to_draft" string="Revert to Draft" type="object" states="cancel"/>

                    <button name="print_pricelist" string="Print" type="object" states="sent,confirm,done" class="o_sale_print"/>
                    <button name="action_pricelist_send" string="Send by Email" type="object" states="sent,confirm"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <!-- Unimplemented 
                        <button name="action_view_lines"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o">
                            <field name="lines_count" widget="statinfo" string="Lines"/>
                        </button>
                    -->
                        <button name="action_view_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o">
                            <field name="quotations_count" widget="statinfo" string="Quotations"/>
                        </button>
                        <button name="action_view_orders"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o">
                            <field name="orders_count" widget="statinfo" string="Orders"/>
                        </button>                 
                    </div>
                    
                    <!-- Warnings -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'/>
                        </group>
                        <group>
                            <field name="rfq_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="create_date" readonly="1"/>
                            <br/>
                            <field name="sent_date" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                            <field name="validity_date" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                            <field name="confirmation_date" attrs="{'invisible': ['!', ('state', 'in', ['confirm','done'])]}"/>
                            <field name="activation_date" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                            <field name="end_date" attrs="{'invisible': ['|', ('state', '!=', 'cancel'), ('activation_date', '=', False)]}"/>
                            <br/>
                            <field name="payment_term_id"/>
                            <field name="enforce_lots"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pricelist Items">
                            <field name="pricelist_lines" mode="tree" attrs="{'readonly': [('state', '!=', ('draft'))]}">

                                <form string="Pricelist Item">
                                    <group>
                                        <group string="Item">
                                            <field name="product_id"/>
                                            <field name="customer_ref"/>
                                            <br/>
                                            <field name="lot_size"/>
                                        </group>
                                    </group>
                                    <group string="Pricing Info">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </group>

                                    <field name="state" invisible="1"/>
                                </form>

                                <tree string="Pricelist Lines" editable="bottom" decoration-danger="is_unique != True">
                                    <field name="is_unique" invisible="1"/>
                                    <field name="product_id"
                                        force_save="1"
                                        context="{'partner_id':parent.partner_id}"
                                        domain="[['sale_ok','=',True]]"
                                       />
                                    <field name="customer_ref"/>
                                    <field name="lot_size"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group string="Sales Information" name="sales_person">
                                    <field name="user_id"/>
                                    <field name="team_id"/>
                                    <field name="customer_ref"/>
                                </group>
                                <group string="Reporting" name="technical" groups="base.group_no_one">
                                    <field groups="base.group_no_one" name="origin"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>


        <record id="view_pricelist_line_form" model="ir.ui.view">
            <field name="name">partner.pricelist.line.form</field>
            <field name="model">partner.pricelist.line</field>
            <field name="arch" type="xml">
                <form string="Pricelist Item">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="pricelist_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>                    
                            <group string="Item">
                                <field name="product_id"/>
                                <field name="customer_ref"/>
                                <br/>
                                <field name="lot_size"/>
                            </group>
                        </group>
                        <group string="Pricing Info">
                            <field name="currency_id" invisible="1"/>
                            <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>

                        <field name="state" invisible="1"/>
                    </sheet>
                </form> 
            </field>
        </record>

        <record id="view_pricelist_line_tree" model="ir.ui.view">
            <field name="name">partner.pricelist.line.tree</field>
            <field name="model">partner.pricelist.line</field>
            <field name="arch" type="xml">
                <tree string="Pricelist Item" decoration-danger="is_unique != True">
                    <field name="is_unique" invisible="1"/>
                    <field name="product_id"
                        force_save="1"
                        context="{'partner_id':parent.partner_id}"
                        domain="[['sale_ok','=',True]]"
                        />
                    <field name="lot_size"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

</odoo>