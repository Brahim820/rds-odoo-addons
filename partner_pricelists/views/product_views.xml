<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_pricelists_product_partner_pricelist" model="ir.ui.view">
            <field name="name">partner_pricelists_product_partner_pricelist</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='pricelist_item']" position="after">
                    <div name="partner_pricelist_item">
                        <separator string="Partner Pricelists"/>
                        <field name="partner_pricelist_lines" nolabel="1">
                            <tree string="Pricelist Items" editable="bottom">
                                <field name="state" invisible="1"/>
                                <field name="pricelist_id" string="Pricelist" required='1'/>
                                <field name="partner_id"/>
                                <field name="customer_ref"/>
                                <field name="lot_size"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="activation_date"/>
                                <field name="end_date"/>
                            </tree>
                        </field>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>