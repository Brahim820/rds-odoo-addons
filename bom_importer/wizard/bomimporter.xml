 <?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="bom_loader_wizard_form" model="ir.ui.view">
            <field name='name'>bom.loader.wizard</field>
            <field name='model'>bomimporter.loader</field>
            <field name='arch' type='xml'>
                <form string='Stampa Paghe'>
                    <sheet>
                        <group attrs="{'invisible': [('state', '=', 'loaded')]}">
                            <field name="state" invisible="1"/>
                            <field name="filename" invisible="1"/>
                            <field name="file_dis" filename="filename"/>
                        </group>
                            
                        <h2 attrs="{'invisible': [('state', '!=', 'loaded')]}">
                            <field name="name" placeholder="Product..." attrs="{'required':  [('state', '=', 'loaded')]}" context="{'default_name': filename}"/>
                        </h2>
                        <group attrs="{'invisible': [('state', '!=', 'loaded')]}">
                            <field name="proposed_rows" colspan="4" nolabel="1" >
                                <tree editable="bottom">
                                    <field name="position"/>
                                    <field name="child_of"/>
                                    <field name="name"/>
                                    <field name="action"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="comment"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="product_id"/>
                                            </group>
                                            <group>
                                                <field name="qty"/>
                                                <field name="comment"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button string="Load BOM" name="load_bom" attrs="{'invisible': [('state', '=', 'loaded')]}" type="object"/>
                        <button string="Build BOM" name="build_bom" attrs="{'invisible': [('state', '!=', 'loaded')]}" type="object"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_show_bom_loader" model="ir.actions.act_window">
            <field name="name">Load BOM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bomimporter.loader</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <menuitem id="menu_load_external_bom" action="act_show_bom_loader" parent="mrp.menu_mrp_bom"/>
</odoo>
