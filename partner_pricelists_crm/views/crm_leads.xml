<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_action_pricelist_new" model="ir.actions.act_window">
            <field name="name">Pricelist</field>
            <field name="res_model">partner.pricelist</field>
            <field name="view_mode">form,tree</field>
            <field name="domain">[('opportunity_id', '=', active_id)]</field>
            <field name="context">{'search_default_opportunity_id': active_id, 'default_opportunity_id': active_id}</field>
        </record>

        <record id="partner_pricelists_crm_leads_form" model="ir.ui.view">
            <field name="name">partner.pricelists.crm.leads.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_set_won']" position="before">
                    <button string="New Pricelist" name="%(sale_action_pricelist_new)d" type="action" class="oe_highlight"
                        context="{'search_default_partner_id': partner_id,
                                  'default_partner_id': partner_id,
                                  'default_team_id': team_id,
                                  'default_campaign_id': campaign_id,
                                  'default_medium_id': medium_id,
                                  'default_source_id': source_id,
                                  'default_opportunity_id': id}"/>
                </xpath>

                <xpath expr="//button[@name='toggle_active']" position="before">
                    <button class="oe_stat_button" type="object"
                            name="action_view_pricelists" icon="fa-pencil-square-o">
                        <div class="o_stat_info">
                            <field name="pricelists_count" class="o_stat_value"/>
                            <span class="o_stat_text"> Pricelist(s) </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>


        <record id="partner_pricelists_utm_form" model="ir.ui.view">
            <field name="name">partner_pricelists_utm_form</field>
            <field name="model">partner.pricelist</field>
            <field name="inherit_id" ref="partner_pricelists.view_pricelist_form"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <group name="sales_person" position="inside">
                    <field name="opportunity_id" help="Log in the chatter from which opportunity the order originates"/>
                </group>
                <group name="technical" position="inside">
                    <field name="campaign_id" groups="base.group_no_one" />
                    <field name="medium_id" groups="base.group_no_one"/>
                    <field name="source_id" groups="base.group_no_one"/>
                </group>
            </field>
        </record>
    </data>
</odoo>