<odoo>
<data>
    <template id="report_standard_lable">
        <t t-call="web.internal_layout">
            <div class="page">
            <div class="oe_structure"/>
            <div style="top: 30px;">
                <table style="width: 100%;height: 100%;border: 1mm solid black;border-collapse: collapse;">
                    <col width="30"/>
                    <col width="70"/>
                    <tr style="border: 1mm solid black;">
                        <td height="200px" rowspan="4" style="border: 1mm solid black;font-size: 10px;text-align: center;">
                          <img id="product_image" class="img img-responsive" border="1" name="image_medium" t-att-src="doc.get('image_src')"/>
                        </td>
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                            <t t-esc="doc.get('customer_name')"/>
                        </td>
                    </tr>
                    <tr style="border: 1mm solid black;">
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                            Art.Cli: <t t-esc="doc.get('codice_articolo_cliente')"/>
                        </td>
                    </tr>
                    <tr style="border: 1mm solid black;">
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                            <t t-esc="doc.get('descrizione')"/>
                        </td>
                    </tr>
                    <tr style="border: 1mm solid black;">
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                           <div>PZ: <t t-esc="doc.get('pakage')"/></div>
                           <img t-if="doc.get('pakage', '') != ''" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Standard39', doc.get('pakage',''), 100, 50)" style="width:100%;height:100%;"/>
                        </td>
                    </tr>
                    <tr style="border: 1mm solid black;">
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                            <img t-if="doc.get('product', '') != ''" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Standard39', doc.get('product',''), 100, 50)" style="width:100%;height:100%;"/>
                        </td>
                        <td style="border: 1mm solid black;font-size: 10px;text-align: left">
                            <t t-esc="doc.get('product')"/>
                        </td>
                    </tr>    
                    <tr>
                        <td colspan="2">RDS MOULDING SPA, VIA CAVALIENRI DI MALTA, 8, TORREGLIA, 35038, PD (ITALIA)</td>
                    </tr>        
               </table>
            </div>
            </div>
        </t>
    </template>
    
    <!-- Main template -->
    <template id="report_standard_lables">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="rds_extension.report_standard_lable"/>
            </t>
        </t>
    </template>
    </data>
</odoo>