<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_code_crm_leads_form" model="ir.ui.view">
            <field name="name">crm_lead_code_crm_leads_form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']/.." position="after">
                    <h2 class="o_row oe_grey" style="font-style: italic;font-weight:400;"><field name="code"/></h2><br/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_code_crm_leads_tree" model="ir.ui.view">
            <field name="name">crm_lead_code_crm_leads_tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code" string="Code"/>
                </xpath>
            </field>
        </record>

        <record id="crm_lead_code_crm_leads_kanban" model="ir.ui.view">
            <field name="name">crm_lead_code_crm_leads_kanban</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']/../.." position="before">
                    <div class="text-muted o_kanban_record_subtitle">
                        <field name="code" string="Code"/>
                    </div>
                </xpath>
            </field>
        </record> 

    </data>
</odoo>