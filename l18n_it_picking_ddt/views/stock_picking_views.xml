<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="stock_picking_reason_tree" model="ir.ui.view">
            <field name="name">stock.picking.reason.tree</field>
            <field name="model">stock.picking.reason</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Transfer Reasons" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="note"/>
                    <field name="ddt_type"/>
                    <field name="sequence_id"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_picking_reason" model="ir.actions.act_window">
            <field name="name">Transfer Reasons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking.reason</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="stock_picking_reason_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create some transfer reasons to be used in your DDTs.
                </p>
            </field>
        </record>

        <record id="stock_picking_goods_description_tree" model="ir.ui.view">
            <field name="name">stock.picking.goods_description.tree</field>
            <field name="model">stock.picking.goods_description</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Goods Descriptions" editable="bottom">
                    <field name="name"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_picking_goods_description" model="ir.actions.act_window">
            <field name="name">Goods Description</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking.goods_description</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="stock_picking_goods_description_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create some goods description items to be used in your DDTs.
                </p>
            </field>
        </record>
    
        <menuitem id="menu_logistics_config" name="Logistics Management" parent="stock.menu_stock_config_settings" groups="stock.group_stock_manager" sequence="1"/>

        <menuitem id="menu_goods_description" name="Goods Description" action="action_stock_picking_goods_description" parent="menu_logistics_config" sequence="1"/>
        <menuitem id="menu_picking_reason" name="Picking Reason" action="action_stock_picking_reason" parent="menu_logistics_config" sequence="2"/>

        <record id="view_picking_internal_search" model="ir.ui.view">
            <field name="name">view.picking.internal.search</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="filter_domain">['|','|',('name','ilike', self),('origin','ilike',self),('ddt_number','ilike',self)]</attribute>
                </xpath>
            </field>
        </record>
    

        <record id="vpicktree" model="ir.ui.view">
            <field name="name">vpicktree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ddt_number"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_type_form" model="ir.ui.view">
            <field name="name">view.picking.type.form</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="ddt_type"/>
                    <field name="reason_id" domain="[('ddt_type', '=', ddt_type)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">view.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <span attrs="{'invisible': ['|', ('name','=','/'), ('ddt_number', '!=', False)]}">
                        <field name="name" readonly="1"/>
                        <field name="ddt_number" invisible="1"/>
                    </span>
                    <span attrs="{'invisible': [('ddt_number', '=', False)]}">
                        <field name="ddt_number" readonly="1"/> (<field name="name" readonly="1"/>)
                    </span>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="sale_id" invisible="1"/>
                    <field name="partner_order_id" string="Main Partner" attrs="{'invisible': [('sale_id', '=', False)]}"/>
                    <field name="ddt_type" invisible="1"/>    
                    <field name="partner_invoice_id" attrs="{'invisible': [('sale_id', '=', False)]}"/>
                    <field name="partner_id" string="Delivery Address" attrs="{'invisible': [('sale_id', '=', False)]}"/>
                    <field name="partner_id" attrs="{'invisible': [('sale_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='action_toggle_is_locked'][1]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('state', 'in', ('draft','cancel')), ('is_locked', '=', False),  ('ddt_type', '=', 'outgoing')]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
            <field name="name">view.picking.withcarrier.out.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='carrier_data']/.." position="inside">
                    <separator string="Notes"/>
                    <field name="notes" placeholder="Notes.."/>
                </xpath>
                <xpath expr="//field[@name='carrier_id']" position="before">
                    <field name="ddt_type"/>
                    <field name="ddt_number" attrs="{'invisible': [('ddt_type', '!=', 'incoming')], 'readonly': ['&amp;', ('state', '!=', 'draft'), ('is_locked', '=', True)]}"/>
                    <field name="incoterm" attrs="{'readonly': ['&amp;', ('state','in', ['done', 'cancel']), ('is_locked', '=', True)]}"/>
                    <br/>
                </xpath>

                <xpath expr="//field[@name='carrier_id']" position="after">
                    <field name="transport_partner_id"/>
                </xpath>

                <xpath expr="//field[@name='carrier_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['&amp;', ('state','in', ['done', 'cancel']), ('is_locked', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='shipping_weight']" position="attributes">
                    <attribute name="attrs">{'readonly': ['&amp;', ('state','in', ['done', 'cancel']), ('is_locked', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='number_of_packages']" position="before">
                    <br/>
                    <field name="picking_type_id" invisible="1"/>
                    <field name="reason_id" domain="[('ddt_type', '=', picking_type_id.ddt_type)]" attrs="{'readonly': ['&amp;', ('state','in', ['done', 'cancel']), ('is_locked', '=', True)]}"/>
                    <field name="goods_description_id" attrs="{'readonly': ['&amp;', ('state','in', ['done', 'cancel']), ('is_locked', '=', True)]}"/>
                </xpath>

            </field>
        </record>


        <record id="view_delivery_carrier_form" model="ir.ui.view">
            <field name="name">delivery.carrier.form</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='integration_level']" position="before">
                    <label for="transport_partner_id"/>
                    <div>
                        <field name="transport_partner_id"/>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>